<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_sales_commission_manager" model="res.groups">
        <field name="name">Sales Commission Manager</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <record id="rule_sales_commission_line_own" model="ir.rule">
        <field name="name">Commission lines: salesperson can see own</field>
        <field name="model_id" ref="model_sales_commission_line"/>
        <field name="domain_force">[('salesperson_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="rule_sales_commission_line_manager" model="ir.rule">
        <field name="name">Commission lines: manager full access</field>
        <field name="model_id" ref="model_sales_commission_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_commision_product.group_sales_commission_manager'))]"/>
    </record>
</odoo>

